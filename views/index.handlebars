<h1>Burgers!</h1>

<h2>burgers not devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <h2>{{this.burger_name}}</h2>
      <form class="devouredForm">
        <input type="hidden" class="burger_id" value={{this.id}}>
        <button type="submit" class="devouredBtn">Eat Burger</button>
      </form>
      {{/unless}}
  {{/each}}
</ul>

<h2>Burgers have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <h2>{{this.burger_name}}</h2>  
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form action="/createburger" method="POST"class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burgerName">
  </div>
  <button type="submit">Add Burger</button>
</form>